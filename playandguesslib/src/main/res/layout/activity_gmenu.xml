<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/back"
    android:gravity="center"
    tools:context="partygames.shirley.com.playandguesslib.GMenuActivity">

    <LinearLayout
        android:id="@+id/ll_first"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/guess_menu_random"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/song"
            android:layout_margin="10dp"
            android:text="随机"/>

        <ImageView
            android:id="@+id/guess_menu_chengyu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/film"
            android:layout_margin="10dp"
            android:text="随机"/>
    </LinearLayout>


    <LinearLayout
        android:id="@+id/ll_second"
        android:layout_below="@id/ll_first"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal">
    <ImageView
        android:id="@+id/guess_menu_life"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:src="@mipmap/food"
        android:text="随机"/>

    <ImageView
        android:id="@+id/guess_menu_song"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:src="@mipmap/food"
        android:text="随机"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_third"
        android:layout_below="@id/ll_second"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal">
    <ImageView
        android:id="@+id/guess_menu_popular"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/food"
        android:layout_margin="10dp"
        android:text="随机"/>

    <ImageView
        android:id="@+id/guess_menu_film"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/food"
        android:layout_margin="10dp"
        android:text="随机"/>
    </LinearLayout>

</RelativeLayout>
