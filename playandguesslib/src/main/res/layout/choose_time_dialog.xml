<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="#00000000">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="30dp"
        android:gravity="center_horizontal"
        android:background="@mipmap/dialog_back">

        <TextView
            android:id="@+id/dialog_choose_time_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="30dp"
            android:padding="20dp"
            android:text="@string/dialog_content"
            android:textColor="@color/color_dialog_tv_content"
            android:textSize="20dp" />

        <LinearLayout
            android:id="@+id/dialog_ll_choose_time"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:background="@mipmap/base"
            android:orientation="horizontal"
            android:padding="15dp">

            <TextView
                android:id="@+id/dialog_choose_time_60s"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:drawableBottom="@drawable/btn_check_selector"
                android:gravity="center_horizontal"
                android:text="60s"
                android:textSize="20dip" />

            <TextView
                android:id="@+id/dialog_choose_time_90s"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:drawableBottom="@drawable/btn_check_selector"
                android:gravity="center_horizontal"
                android:text="90s"
                android:textSize="20dip" />

            <TextView
                android:id="@+id/dialog_choose_time_180s"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:drawableBottom="@drawable/btn_check_selector"
                android:gravity="center_horizontal"
                android:text="180s"
                android:textSize="20dip" />
        </LinearLayout>


        <ImageView
            android:id="@+id/dialog_choose_time_start"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="15dp"
            android:src="@mipmap/dialog_start"/>
    </LinearLayout>

    <ImageView
        android:id="@+id/dialog_choose_time_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:gravity="center_horizontal"
        android:src="@mipmap/title_chengyu"
        android:textColor="#333333"
        android:textSize="20dp" />
</RelativeLayout>